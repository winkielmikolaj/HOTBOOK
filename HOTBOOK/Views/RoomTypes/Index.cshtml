@model IEnumerable<HOTBOOK.Models.RoomType>

@{
    ViewData["Title"] = "Room Types";
}

<div class="container">
    <h1 class="mb-4">Room Types</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Room Type
        </a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <strong>Capacity:</strong> @item.Capacity persons<br />
                            <strong>Available Rooms:</strong> @(item.Rooms?.Count ?? 0)
                        </p>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group">
                            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 