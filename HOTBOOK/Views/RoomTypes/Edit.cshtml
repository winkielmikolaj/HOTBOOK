@model HOTBOOK.Models.RoomType

@{
    ViewData["Title"] = "Edit Room Type";
}

<div class="container">
    <h1>Edit Room Type</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Room Type Name</label>
                    <input asp-for="Name" class="form-control" placeholder="e.g., Standard, Deluxe, Suite" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Capacity" class="control-label">Maximum Capacity</label>
                    <input asp-for="Capacity" class="form-control" type="number" min="1" max="10" required />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" 
                              placeholder="Describe the room type, amenities, and features" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 