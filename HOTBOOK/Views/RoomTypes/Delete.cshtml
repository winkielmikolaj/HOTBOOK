@model HOTBOOK.Models.RoomType

@{
    ViewData["Title"] = "Delete Room Type";
}

<div class="container">
    <h1>Delete Room Type</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this room type?</h4>
        <p class="mb-0">This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.Capacity persons</dd>

                <dt class="col-sm-3">Available Rooms</dt>
                <dd class="col-sm-9">@(Model.Rooms?.Count ?? 0)</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div> 