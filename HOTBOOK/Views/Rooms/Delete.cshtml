@model HOTBOOK.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container">
    <h1>Delete Room</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this room?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Room Number</dt>
                <dd class="col-sm-9">@Model.RoomNumber</dd>

                <dt class="col-sm-3">Room Type</dt>
                <dd class="col-sm-9">@Model.RoomType?.Name</dd>

                <dt class="col-sm-3">Floor</dt>
                <dd class="col-sm-9">@Model.Floor</dd>

                <dt class="col-sm-3">Price per Night</dt>
                <dd class="col-sm-9">$@Model.PricePerNight</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                        @(Model.IsAvailable ? "Available" : "Occupied")
                    </span>
                </dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div> 